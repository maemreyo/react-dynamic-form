ypes.ts","/Users/matthewngo/Documents/dev/projects/react-dynamic-form/src/features/dynamic-form/index.ts","/Users/matthewngo/Documents/dev/projects/react-dynamic-form/src/theme/ThemeProvider.tsx"],"dts":{"name":"/Users/matthewngo/Documents/dev/projects/react-dynamic-form/features/inputs/components/TextInput.d.ts","writeByteOrderMark":false,"text":"import React from 'react';\nimport { CommonInputProps } from '../types';\ndeclare const TextInput: React.FC<CommonInputProps>;\nexport default TextInput;\n"}}
